<h1 class="center-align">Whose Who</h1>

<hr />

<% if @people.any? %>

  <div class="row">
  <% @people.each do |person| %>
    <div class="col s4">
      <div class="card blue-grey darken-1 hoverable">
        <div class="card-content white-text">
          <span class="card-title"><%= person.first_name + ' ' + person.last_name %></span>
        </div>
        <div class="card-action">
          <%= link_to "More Info", person_path(person) %>
        </div> 
      </div>
    </div>  
  <% end %>
  </div>

<% else %>

  <h4>No People! Please Add.</h4>

<% end %>

<%= link_to 'Add New Person', new_person_path, class: 'btn btn-primary'  %>
