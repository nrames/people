<h1>
  Editing: <%= @person.first_name + ' ' + @person.last_name %>
</h1>

<%= form_for @person do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true %>
  <br />
  <%= f.label :age %>
  <%= f.text_field :age, required: true %>
  <br />
  <%= f.label :career %>
  <%= f.text_field :career, required: true %>
  <br />
  <%= f.label :movie_quote %>
  <%= f.text_area :movie_quote, required: true %>
  <br />
  <%= f.check_box :single %>
  <%= f.label :single %>
  <br />
  <%= f.submit "Update Person", :class => "btn btn-large" %>
<% end %>

<br />

<%= link_to 'Cancel', person_path(@person), class: 'btn' %>